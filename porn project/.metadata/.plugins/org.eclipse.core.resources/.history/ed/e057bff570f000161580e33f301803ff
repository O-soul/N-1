package Utilities;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.NoSuchElementException;
import org.openqa.selenium.StaleElementReferenceException;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import PornTest.porn.BaseTest;

public class Utils {

	static WebDriverWait wait;
	
	public static void waitUntilVisible(WebElement e){
		new WebDriverWait(BaseTest.driver, 15)
		.withTimeout(15, TimeUnit.SECONDS)
		.pollingEvery(100, TimeUnit.MILLISECONDS)
		.ignoring(NoSuchElementException.class)
		.ignoring(StaleElementReferenceException.class)
		.until(ExpectedConditions.visibilityOf(e));	
	}
	
	
	public static WebElement waitUntilVsible(WebElement element) {
		try{
			Wait<WebDriver> wait = new FluentWait<WebDriver>(getDriver())
					.withTimeout(Config.longTimeout, TimeUnit.SECONDS)
					.pollingEvery(100, TimeUnit.MILLISECONDS)
					.ignoring(NoSuchElementException.class)
					.ignoring(StaleElementReferenceException.class);
			return wait.until(
					ExpectedConditions.visibilityOf(element));
		}catch(TimeoutException e){
			return null;
		}
	}
}
